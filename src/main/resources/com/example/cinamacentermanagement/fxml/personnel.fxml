<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="474.0" prefWidth="759.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cinamacentermanagement.controllers.PersonnelController">
   <left>
        <TableView fx:id="employeesTableView" prefHeight="444.0" prefWidth="667.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="92.0" text="Personnel ID" />
                <TableColumn fx:id="firstNameColumn" prefWidth="103.0" text="First Name" />
                <TableColumn fx:id="lastNameColumn" prefWidth="105.0" text="Last Name" />
                <TableColumn fx:id="usernameColumn" prefWidth="114.0" text="Username" />
                <TableColumn fx:id="passwordColumn" prefWidth="127.0" text="Password" />
                <TableColumn fx:id="roleColumn" prefWidth="128.0" text="Role" />
            </columns>
         <BorderPane.margin>
            <Insets left="20.0" />
         </BorderPane.margin>
        </TableView>
   </left>
   <top>
        <HBox spacing="10" styleClass="main-content" stylesheets="@../css/Manager.css" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="viewAllEmployeesButton" styleClass="logout-button" text="View All Personnels" />
                <Button fx:id="hirePersonnelButton" styleClass="logout-button" text="Hire Personnel" />
                <Button fx:id="firePersonnelButton" styleClass="logout-button" text="Fire Personnel" />
            </children>
        </HBox>
   </top>
</BorderPane>
