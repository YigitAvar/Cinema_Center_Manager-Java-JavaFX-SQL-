<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="617.0" prefWidth="1031.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cinamacentermanagement.controllers.PricingController">
    <left>
        <TableView fx:id="moviesTable" prefHeight="552.0" prefWidth="665.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="movieIdColumn" prefWidth="92.0" text="Movie ID" />
                <TableColumn fx:id="titleColumn" prefWidth="129.0" text="Title" />
                <TableColumn fx:id="ticketPriceColumn" prefWidth="79.0" text="Ticket Price" />
                <TableColumn fx:id="genreColumn" prefWidth="83.0" text="Genre" />
                <TableColumn fx:id="summaryColumn" prefWidth="283.0" text="Summary" />
            </columns>
         <BorderPane.margin>
            <Insets left="20.0" />
         </BorderPane.margin>
        </TableView>
    </left>
    <top>
        <HBox spacing="10" styleClass="main-content" stylesheets="@../css/Manager.css" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="viewMoviesButton" styleClass="logout-button" text="View Movies" />
                <Button fx:id="updateTicketPricesButton" styleClass="logout-button" text="Update Ticket Prices" />
            </children>
        </HBox>
    </top>
   <center>
        <ImageView fx:id="posterImageView" fitHeight="474.0" fitWidth="329.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
