<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cinamacentermanagement.controllers.ManagerOperationsController">
   <children>
      <TabPane layoutY="2.0" prefHeight="600.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="Inventory">
               <content>
                  <AnchorPane>
                     <children>
                        <Label layoutX="10.0" layoutY="10.0" text="Inventory Management" />
                        <Button layoutX="10.0" layoutY="40.0" text="View Inventory" fx:id="viewInventoryButton" />
                        <Button layoutX="10.0" layoutY="80.0" text="Update Inventory" fx:id="updateInventoryButton" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Personnel">
               <content>
                  <AnchorPane>
                     <children>
                        <Label layoutX="10.0" layoutY="10.0" text="Personnel Management" />
                        <Button layoutX="10.0" layoutY="40.0" text="Hire Personnel" fx:id="hirePersonnelButton" />
                        <Button layoutX="10.0" layoutY="80.0" text="Fire Personnel" fx:id="firePersonnelButton" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Pricing">
               <content>
                  <AnchorPane>
                     <children>
                        <Label layoutX="10.0" layoutY="10.0" text="Pricing and Discounts" />
                        <Button layoutX="10.0" layoutY="40.0" text="Update Ticket Prices" fx:id="updateTicketPricesButton" />
                        <Button layoutX="10.0" layoutY="80.0" text="Update Product Prices" fx:id="updateProductPricesButton" />
                        <Button layoutX="10.0" layoutY="120.0" text="Update Discounts" fx:id="updateDiscountsButton" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
            <Tab text="Revenue">
               <content>
                  <AnchorPane>
                     <children>
                        <Label layoutX="10.0" layoutY="10.0" text="Revenue and Taxes" />
                        <Button layoutX="10.0" layoutY="40.0" text="View Revenue and Taxes" fx:id="viewRevenueButton" />
                     </children>
                  </AnchorPane>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</AnchorPane>